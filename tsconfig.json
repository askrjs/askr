{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ES2021", "DOM"],

    "jsx": "preserve",
    "jsxImportSource": "@askrjs/askr",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "bundler"
  },

  "include": ["src/**/*"],
  "exclude": ["tests", "benches", "examples"]
}
